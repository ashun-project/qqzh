doctype html 5
html
    head
        title=pageTitle
        meta(charset="utf-8")
        meta(name="keywords", content=pageKeyword)
        meta(name="description", content='#{pageDescrition}')
        meta(name="applicable-device", content="pc,mobile")
        meta(name="MobileOptimized", content="width")
        meta(name="HandheldFriendly", content="true")
        link(rel="stylesheet", type="text/css", href="/css/style.css")
        link(rel="shortcut icon", href="#{host}/img/favicon.ico", type="image/x-icon")
    body
        include ../include/header.jade
        .banner
            img(src="#{host}/img/bn.jpg", alt="妹子-banner")
        .lsit-items
            .data-list
                each item in listData
                    a(href="#{host+'/meitu/'+ item.type +'/'+item.id}", title="#{item.title}", target="_blank")
                        .list-img
                            img(src="#{host+item.img.replace('https://mtl.ttsqgs.com','/meitustatic')}", alt="#{item.title}")
                        .list-profile
                            p #{item.imglen}
                            p #{item.jigou}
                            p #{item.mutie}
                        .list-title
                            strong #{item.title}
                -if(!listData.length)
                    span.no-data 没有找到数据，请重新选择！
        .meitu-page !{page} 
        script
            include ../include/header_menu.js
        .footer
            span © 2019 情趣综合平台，致力打造用户喜爱
        script(type="text/javascript", src="https://s5.cnzz.com/z_stat.php?id=1276301345&web_id=1276301345", async="async")
        