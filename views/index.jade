                                    img(src="#{item.img.replace('http://img.mingxing.com','http://img.qqzhpt.com/xingwenstatic')}", alt="#{item.title}")
                            .list-cont
                                a(href="#{host+'/xingwen/'+item.type+'/'+item.id}", title="#{item.title}", target="_blank")
                                    h3 #{item.title}
                                p #{item.txt}
                                i #{item.time}
            .meitu-list
                h2.series #{listData.meitu.name}
                    a.rf(href="#{host}/meitu/", title="精品美图") 更多
                .data-list
                    each vv in listData.meitu.list
                        a(href="#{host+'/meitu/detail/'+vv.id}", title="#{vv.title}", target="_blank")
                            .list-img
                                img(src="#{vv.img.replace('https://mtl.ttsqgs.com','http://img.qqzhpt.com/meitustatic')}", alt="#{vv.title}")
                            .list-profile
                                p #{vv.imglen}
                                p #{vv.jigou}
                                p #{vv.mutie}
                            .list-title
                                strong #{vv.title}
